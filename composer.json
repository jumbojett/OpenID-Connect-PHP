{
    "name": "jumbojett/openid-connect-php",
    "description": "Bare-bones OpenID Connect client",
    "require": {
        "php": ">=5.4",
        "phpseclib/phpseclib" : "2.0.1",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phing/phing": "^2.16",
        "squizlabs/php_codesniffer": "^2.0"
    },
    "archive" : {
        "exclude" : [
            ".*"
        ]
    },
    "autoload" : {
         "classmap": [ "src/"]
    }
}
